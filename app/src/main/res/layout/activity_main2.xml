<?xml version="1.0" encoding="utf-8"?>
<com.github.yoyozhangh.studydemo.motionevent.view.MyRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.yoyozhangh.studydemo.animation.MainActivity">

    <com.github.yoyozhangh.studydemo.animation.MyCircleView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.github.yoyozhangh.studydemo.motionevent.view.MyTextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#fab"
        android:text="Hello World!" />

    <Button
        android:id="@+id/bt"
        android:layout_below="@id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:background="#fab"
        android:text="play animation" />

    <ImageView
        android:layout_below="@id/bt"
        android:src="@drawable/loading_animlist"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</com.github.yoyozhangh.studydemo.motionevent.view.MyRelativeLayout>
